{
  "name": "Transformers.js Lite",
  "version": "1.0.0-lite",
  "description": "轻量化 Transformers.js 实现，专为 Information bar integration tool 设计",
  "author": "Information bar integration tool",
  "license": "MIT",
  "main": "transformers-lite.js",
  "features": {
    "textVectorization": true,
    "semanticSimilarity": true,
    "tfidfVectorizer": true,
    "characterFeatures": true,
    "dimensionReduction": true,
    "chineseSupport": true,
    "englishSupport": true,
    "batchProcessing": true,
    "progressCallback": true
  },
  "settings": {
    "defaultDimensions": 384,
    "maxVocabularySize": 10000,
    "defaultBatchSize": 50,
    "stopWords": {
      "chinese": ["的", "是", "在", "有", "和", "了", "一", "个", "上", "我", "你", "他", "她", "它"],
      "english": ["the", "is", "at", "which", "on", "and", "a", "an", "as", "are", "was", "were"]
    },
    "preprocessing": {
      "normalize": true,
      "tokenize": true,
      "removeStopWords": true,
      "minTokenLength": 2
    },
    "vectorization": {
      "method": "tfidf",
      "fallbackToCharacter": true,
      "normalization": true,
      "dimensionReduction": "hash"
    }
  },
  "compatibility": {
    "transformersApi": "3.0.2",
    "pipelineSupport": ["feature-extraction"],
    "browsers": ["Chrome", "Firefox", "Edge", "Safari"]
  },
  "performance": {
    "loadTime": "<500ms",
    "vectorizationSpeed": "~100 texts/second",
    "memoryUsage": "<10MB",
    "fileSize": "~50KB"
  },
  "changelog": {
    "1.0.0-lite": {
      "date": "2025-09-10",
      "changes": [
        "初始发布",
        "支持TF-IDF向量化",
        "支持中英文文本处理",
        "兼容Transformers.js Pipeline API",
        "添加字符级特征备用方案",
        "实现哈希投影降维"
      ]
    }
  }
}
