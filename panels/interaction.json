{
    "id": "interaction",
    "label": "交互对象",
    "icon": "fa-users",
    "description": "配置当前场景中NPC的信息显示，支持多个NPC同时展示",
    "category": "panel",
    "defaultEnabled": true,
    "priority": 2,
    "aiPromptHint": "记录当前场景中出现的所有重要NPC信息，使用npc0、npc1等编号区分不同角色",
    "exampleData": {
        "npc0.name": "莉娅教授",
        "npc0.age": "45",
        "npc0.identity": "高级魔法导师",
        "npc0.mood": "严肃但友善",
        "npc0.affection": "信任的学生",
        "npc1.name": "杰克",
        "npc1.identity": "同班同学",
        "npc1.mood": "友好活泼"
    },
    "items": [
        {
            "id": "name",
            "label": "姓名",
            "type": "text",
            "category": "basic",
            "defaultValue": true,
            "priority": 1,
            "description": "NPC的姓名",
            "aiHint": "NPC的完整姓名或称呼",
            "example": "莉娅教授"
        },
        {
            "id": "age",
            "label": "年龄",
            "type": "text",
            "category": "basic",
            "defaultValue": true,
            "priority": 2,
            "description": "NPC的年龄",
            "aiHint": "具体年龄或年龄段描述",
            "example": "45岁"
        },
        {
            "id": "gender",
            "label": "性别",
            "type": "text",
            "category": "basic",
            "defaultValue": true,
            "priority": 3,
            "description": "NPC的性别",
            "aiHint": "NPC的性别",
            "example": "女"
        },
        {
            "id": "identity",
            "label": "身份",
            "type": "text",
            "category": "basic",
            "defaultValue": true,
            "priority": 4,
            "description": "NPC的身份或职业",
            "aiHint": "NPC的社会身份、职业或角色",
            "example": "高级魔法导师"
        },
        {
            "id": "appearance",
            "label": "外貌",
            "type": "text",
            "category": "appearance",
            "defaultValue": false,
            "priority": 5,
            "description": "NPC的外貌特征",
            "aiHint": "简要的外貌描述",
            "example": "银发，戴着半月形眼镜"
        },
        {
            "id": "mood",
            "label": "情绪",
            "type": "text",
            "category": "status",
            "defaultValue": true,
            "priority": 6,
            "description": "NPC当前的情绪状态",
            "aiHint": "NPC的情绪和态度",
            "example": "严肃但友善"
        },
        {
            "id": "currentState",
            "label": "当前状态",
            "type": "text",
            "category": "status",
            "defaultValue": true,
            "priority": 7,
            "description": "NPC正在做什么",
            "aiHint": "NPC当前的行为或状态",
            "example": "正在整理魔法卷轴"
        },
        {
            "id": "thoughts",
            "label": "内心想法",
            "type": "text",
            "category": "status",
            "defaultValue": false,
            "priority": 8,
            "description": "NPC的内心想法（如果可知）",
            "aiHint": "NPC可能的想法或意图",
            "example": "考虑是否该给这个学生更难的课题"
        },
        {
            "id": "affection",
            "label": "好感度",
            "type": "text",
            "category": "relationship",
            "defaultValue": true,
            "priority": 9,
            "description": "NPC对主角的好感度",
            "aiHint": "描述性的好感度或关系状态",
            "example": "信任的学生"
        },
        {
            "id": "relationship",
            "label": "关系",
            "type": "text",
            "category": "relationship",
            "defaultValue": true,
            "priority": 10,
            "description": "与主角的关系",
            "aiHint": "NPC与主角的关系定位",
            "example": "导师与学生"
        },
        {
            "id": "trustLevel",
            "label": "信任度",
            "type": "text",
            "category": "relationship",
            "defaultValue": false,
            "priority": 11,
            "description": "NPC对主角的信任程度",
            "aiHint": "信任度的描述",
            "example": "高度信任"
        },
        {
            "id": "lastInteraction",
            "label": "上次互动",
            "type": "text",
            "category": "relationship",
            "defaultValue": false,
            "priority": 12,
            "description": "上次重要互动的简述",
            "aiHint": "最近一次重要交流或事件",
            "example": "昨天讨论了进阶魔法理论"
        }
    ]
}